<h1><%= @event.name %></h1>
<p>
  <strong>Costs: </strong>
  <% if @event.free %>
    Free
  <% else %>
    <%= @event.price %> dollars
  <% end %><br />
  <strong>Type: </strong><%= @event.occur_type %> <br />
  <strong>Location: </strong><%= @event.location %><br />
  <strong>Start: </strong>
    <%= @event.start_date_time.strftime("%A, %B %d, %Y -  %I:%M %p") %><br />
  <strong>End: </strong>
    <%= @event.end_date_time.strftime("%A, %B %d, %Y -  %I:%M %p") %><br />
  <strong>Description: </strong><%= @event.content %><br />
</p>

