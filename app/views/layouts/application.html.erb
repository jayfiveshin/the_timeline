<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <%= render 'layouts/stylesheets' %>
    <%= stylesheet_link_tag :all %>
    <%= javascript_include_tag :defaults %><%= csrf_meta_tag %>
  </head>
  <body>
    <%= render 'layouts/header' %>
    <%= render 'layouts/sidebar_left' %> <!-- Uses float property -->
    <%= render 'layouts/sidebar_right' %> <!-- Uses float property -->
    <div class="center", id="mainbar">
      <%= yield %>
    </div>
    <%= render 'layouts/footer' %>
  </body>
</html>
